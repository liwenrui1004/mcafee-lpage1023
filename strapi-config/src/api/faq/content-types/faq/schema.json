{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ",
    "description": "常见问题"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "question": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "answer": {
      "type": "text",
      "required": true
    },
    "category": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "isPopular": {
      "type": "boolean",
      "default": false
    }
  }
}
